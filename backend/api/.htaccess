<IfModule mod_authz_core.c>
  <FilesMatch "^(\.env|.*\.ini|.*\.log|config\.php)$">
    Require all denied
  </FilesMatch>
</IfModule>
<IfModule !mod_authz_core.c>
  <Files ~ "^(\.env|.*\.ini|.*\.log|config\.php)$">
    Order allow,deny
    Deny from all
  </Files>
</IfModule>

# Prevent directory listings
Options -Indexes